<%- include('../partials/header') %>

<main>

    <div class="d-block  position-static bg-secondary lunos-section py-5">
        <div class="container">
            <!--Información personal-->
            <div class="my-3 p-3 bg-body rounded shadow-lg border mx-auto w-50">
                <div class="row mb-3">
                    <div class="col-lg-2">
                        <a class="link-success" href="/settings"><i
                                class="fa-solid fa-arrow-left icon-reaction-size-m"></i></a>
                    </div>
                    <div class="col-lg-8">
                        <h6 class="lead fw-bold border-bottom pb-2 mb-0">Configurar fecha de nacimiento</h6>
                    </div>
                    <div class="col-lg-2">
                        <a class="link-success" href="/"><i class="fa-solid fa-xmark icon-reaction-size-m"></i></a>
                    </div>
                </div>
                <form action="/settings-date" method="post">
                    <div class="col-sm-12 mb-3">
                        <label for="dia" class="form-label">Día</label>
                        <input type="text" class="form-control" name="dia" id="dia" placeholder="Ingresa tu día de nacimiento"
                            value="<%-user.dia%>">
                    </div>
                    <div class="col-sm-12 mb-3">
                        <label for="mes" class="form-label">Mes</label>
                        <select class="form-select" name="mes" id="mes">
                            <%let meses = ["Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre"];%>
                            <%for(var i=0; i<12; i++){%>
                                <%if(user.mes == meses[i]){%>
                                    <option value="<%-meses[i]%>" selected><%-meses[i]%></option>    
                                <%}else {%>
                                    <option value="<%-meses[i]%>"><%-meses[i]%></option>
                                <%}%>
                            <%}%>
                        </select>
                    </div>


                    <div class="col-12 mb-3">
                        <label for="año" class="form-label">Año</label>
                        <div class="input-group has-validation">
                            <input type="text" class="form-control" name="año" id="año"
                                placeholder="Ingresa tu año de nacimiento" value="<%-user.año%>">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-lg btn-success w-100 mx-0 mb-2">Guardar</button>
                        </div>
                        <div class="col-lg-6">
                            <button type="button" class="btn btn-lg btn-light w-100"
                                data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</main>

<%- include('../partials/footer') %>