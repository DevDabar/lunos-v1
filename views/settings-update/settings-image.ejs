<%- include('../partials/header') %>

<main>

    <div class="d-block  position-static bg-secondary lunos-section py-5">
        <div class="container">
            <!--InformaciÃ³n personal-->
            <div class="my-3 p-3 bg-body rounded shadow-lg border mx-auto w-50">
                <div class="row mb-3">
                    <div class="col-lg-2">
                        <a class="link-success" href="/settings"><i
                                class="fa-solid fa-arrow-left icon-reaction-size-m"></i></a>
                    </div>
                    <div class="col-lg-8">
                        <h6 class="lead fw-bold border-bottom pb-2 mb-0">Configurar foto de perfil</h6>
                    </div>
                    <div class="col-lg-2">
                        <a class="link-success" href="/"><i class="fa-solid fa-xmark icon-reaction-size-m"></i></a>
                    </div>
                </div>
                <form action="/settings-image" method="post" enctype="multipart/form-data">
                    <div class="col-sm-12 mb-3">
                        <% if(user.img.data === undefined || user.img.data === "") { %>
                        <div class="mx-auto">
                            <img width="252" height="225" class="rounded-circle" width="100%" height="225"
                                src="images/defaults/default_profile_img.png"
                                role="img">
                            </img>
                        </div>
                        <p class="py-3 mb-0 small lh-sm">
                            Agrega una foto para personalizar tu cuenta
                        </p>
                        <%} else { %>
                        <div class="mx-auto">
                            <img width="252" height="225" class="rounded-circle" width="100%" height="225"
                                src="data:image/<%=user.img.contentType%>;base64,<%=user.img.data.toString('base64')%>"
                                role="img">
                            </img>
                        </div>
                        <% } %>


                    </div>
                    <div class="col-sm-12 mb-3">
                        <label for="image" class="form-label"></label>
                        <input class="form-control" type="file" id="image" name="image">
                    </div>

                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-lg btn-success w-100 mx-0 mb-2">Guardar</button>
                        </div>
                        <div class="col-lg-6">
                            <button type="button" class="btn btn-lg btn-light w-100"
                                data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</main>

<%- include('../partials/footer') %>